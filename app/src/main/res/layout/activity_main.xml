<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:textSize="50sp"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/font"
            android:textColor="@color/white"
            android:layout_gravity="bottom|end"
            android:id="@+id/previousNumber"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:textSize="80sp"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/font"
            android:textColor="@color/white"
            android:layout_gravity="bottom|end"
            android:id="@+id/onChangeNumber"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="AC"
                android:id="@+id/ac"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:fontFamily="@font/sfpro"
                android:gravity="center"
                android:background="@drawable/background_btn"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="+/-"
                android:id="@+id/negativeNumber"
                android:fontFamily="@font/sfpro"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:background="@drawable/background_btn"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="%"
                android:id="@+id/mod"
                android:fontFamily="@font/sfpro"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_btn"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_btn2"
                android:gravity="center"
                android:text="÷"
                android:id="@+id/division"
                android:textColor="@color/white"
                android:textSize="40sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="7"
                android:id="@+id/number7"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:fontFamily="@font/sfpro"
                android:gravity="center"
                android:background="@drawable/background_btn1"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="8"
                android:id="@+id/number8"
                android:fontFamily="@font/sfpro"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:background="@drawable/background_btn1"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="9"
                android:id="@+id/number9"
                android:fontFamily="@font/sfpro"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_btn1"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="×"
                android:id="@+id/multiply"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:background="@drawable/background_btn2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:fontFamily="@font/sfpro"
                android:gravity="center"
                android:id="@+id/number4"
                android:background="@drawable/background_btn1"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="5"
                android:fontFamily="@font/sfpro"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:id="@+id/number5"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:background="@drawable/background_btn1"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="6"
                android:id="@+id/number6"
                android:fontFamily="@font/sfpro"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_btn1"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="−"
                android:id="@+id/sub"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:background="@drawable/background_btn2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/background_btn1"
                android:fontFamily="@font/sfpro"
                android:gravity="center"
                android:text="1"
                android:id="@+id/number1"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2"
                android:fontFamily="@font/sfpro"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:id="@+id/number2"
                android:background="@drawable/background_btn1"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_btn1"
                android:fontFamily="@font/sfpro"
                android:gravity="center"
                android:text="3"
                android:id="@+id/number3"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:id="@+id/add"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:background="@drawable/background_btn2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="175dp"
                android:layout_height="80dp"
                android:text="0"
                android:id="@+id/number0"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:fontFamily="@font/sfpro"
                android:gravity="start|center_vertical"
                android:paddingStart="30dp"
                android:background="@drawable/background_number_zero"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="."
                android:fontFamily="@font/sfpro"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:gravity="center"
                android:id="@+id/dot"
                android:layout_marginStart="15dp"
                android:background="@drawable/background_btn1"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="="
                android:id="@+id/equal"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:background="@drawable/background_btn2"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>